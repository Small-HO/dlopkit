<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".UiHelperActivity">

    <data>

        <variable name="image" type="String" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <com.small.uikit.ui.view.UiWordView
                android:id="@+id/word"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:gravity="center"
                android:textSize="18sp"
                app:is_check="true" />

            <com.small.uikit.ui.view.UiProgressBar
                android:layout_width="80dp"
                android:layout_height="80dp"
                app:bar_background="#FFEB3B"
                app:bar_color="#FF5722"
                app:bar_max="360"
                app:bar_num="350"
                app:bar_text_color="#2196F3"
                app:bar_text_size="4sp"
                app:bar_width="5dp" />

            <com.small.uikit.ui.view.UiProgressBar
                android:layout_width="match_parent"
                android:layout_height="50dp"
                app:bar_background="#FFEB3B"
                app:bar_color="#FF5722"
                app:bar_max="100"
                app:bar_num="20"
                app:bar_width="5dp"
                app:bar_style="1"
                app:corner_radius="5dp"
                android:background="#03A9F4"
                />

            <com.small.uikit.ui.view.UiView
                android:layout_width="50dp"
                android:layout_height="50dp"
                app:background_normal="#673AB7"
                app:border_color="#03A9F4"
                app:border_width="3dp"
                app:corner_radius="25dp" />

            <com.small.uikit.ui.view.UiTextView
                android:id="@+id/tvText"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:gravity="center"
                android:text="测试"
                app:background_normal="#3F51B5"
                app:corner_radius="25dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <com.small.uikit.ui.view.UiButton
                android:layout_width="50dp"
                android:layout_height="50dp"
                app:background_normal="#009688"
                app:corner_radius="25dp" />

            <com.small.uikit.ui.view.UiImageView
                android:id="@+id/ivImage"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:scaleType="centerCrop"
                android:src="@mipmap/ic_launcher"
                app:border_color="#2196F3"
                app:border_width="2dp"
                app:is_circle="true" />

            <com.small.uikit.ui.layout.UiConstraintLayout
                android:layout_width="100dp"
                android:layout_height="100dp"
                app:background_normal="#03A9F4"
                app:corner_radius="50dp" />

            <com.small.uikit.ui.layout.UiLinearLayout
                android:layout_width="100dp"
                android:layout_height="100dp"
                app:background_normal="#00BCD4"
                app:corner_radius="50dp" />

            <com.small.uikit.ui.layout.UiRelativeLayout
                android:layout_width="100dp"
                android:layout_height="100dp"
                app:background_normal="#F44336"
                app:corner_radius="50dp" />

            <com.small.uikit.ui.layout.UiTabLayout
                android:layout_width="100dp"
                android:layout_height="100dp"
                app:background_normal="#673AB7"
                app:corner_radius="50dp" />

        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>