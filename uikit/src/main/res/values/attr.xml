<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- 圆角角度 -->
    <attr name="corner_radius" format="dimension" />
    <attr name="corner_radius_top_left" format="dimension" />
    <attr name="corner_radius_top_right" format="dimension" />
    <attr name="corner_radius_bottom_left" format="dimension" />
    <attr name="corner_radius_bottom_right" format="dimension" />
    <!-- 背景色 -->
    <attr name="background_normal" format="color" />
    <!-- 边框 -->
    <attr name="border_width" format="dimension" />
    <attr name="border_color" format="color" />

    <!-- 基础属性 -->
    <declare-styleable name="BaseView">
        <attr name="corner_radius" />
        <attr name="corner_radius_top_left" />
        <attr name="corner_radius_top_right" />
        <attr name="corner_radius_bottom_left" />
        <attr name="corner_radius_bottom_right" />
        <attr name="background_normal" />
        <!-- 边框 -->
        <attr name="border_width" />
        <attr name="border_color" />
    </declare-styleable>

    <!-- ImageView属性 -->
    <declare-styleable name="UiImageView">
        <attr name="corner_radius" />
        <attr name="corner_radius_top_left" />
        <attr name="corner_radius_top_right" />
        <attr name="corner_radius_bottom_left" />
        <attr name="corner_radius_bottom_right" />
        <!-- 是否圆形 -->
        <attr name="is_circle" format="boolean" />
        <!-- 边框 -->
        <attr name="border_width" />
        <attr name="border_color" />
    </declare-styleable>

    <!-- WordView属性 -->
    <declare-styleable name="UiWordView">
        <attr name="corner_radius" />
        <attr name="corner_radius_top_left" />
        <attr name="corner_radius_top_right" />
        <attr name="corner_radius_bottom_left" />
        <attr name="corner_radius_bottom_right" />
        <attr name="background_normal" />
        <!-- 边框 -->
        <attr name="border_width" />
        <attr name="border_color" />
        <!-- 多颜色 -->
        <attr name="is_check" format="boolean" />
        <attr name="error_color" format="reference|color" />
        <attr name="succeed_color" format="reference|color" />
        <attr name="error_text" format="string" />
        <attr name="succeed_text" format="string" />
    </declare-styleable>

    <!-- SplitView属性 -->
    <declare-styleable name="UiSplitView">
        <!-- 手柄ID -->
        <attr name="view_id" format="reference" />
        <!-- 比例 -->
        <attr name="view_ratio" format="float" />
    </declare-styleable>

    <!-- ProgressBar属性 -->
    <declare-styleable name="UiProgressBar">
        <!-- 条形圆角 -->
        <attr name="corner_radius" />
        <!-- 类型 0：圆形 1：条形 -->
        <attr name="bar_style" format="integer" />
        <!-- 进度条 -->
        <attr name="bar_width" format="dimension" />
        <attr name="bar_background" format="color" />
        <attr name="bar_color" format="color" />
        <attr name="bar_max" format="integer" />
        <attr name="bar_num" format="integer" />
        <!-- 文本 -->
        <attr name="bar_text_color" format="color" />
        <attr name="bar_text_size" format="dimension" />
    </declare-styleable>

    <!-- RecyclerView属性 -->
    <declare-styleable name="UiRecyclerView">
        <attr name="layout_empty" format="reference" />
    </declare-styleable>

</resources>